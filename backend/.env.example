# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb+srv://<db_user>:<db_password>@<cluster_url>/<db_name>?retryWrites=true&w=majority&appName=<app_name>


# JWT Configuration
